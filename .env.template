# ==============================================
# Quant Bot Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!
# ==============================================

# ----------------
# Core Settings
# ----------------
APP_ENV=dev                      # Application environment: dev or prod
RUN_MODE=paper                   # Trading mode: MUST be 'paper' (live trading disabled)
LOG_LEVEL=INFO                   # Logging level: DEBUG, INFO, WARNING, ERROR
TZ=Pacific/Honolulu             # Timezone for operations

# ----------------
# Discord Bot (Required for Discord UI)
# ----------------
DISCORD_BOT_TOKEN=               # Discord bot token from Developer Portal
DISCORD_GUILD_ID=                # Your Discord server ID
DISCORD_REPORTS_CHANNEL_ID=      # Channel ID for reports
DISCORD_WEBHOOK_URL=             # Optional webhook URL for notifications
DISCORD_APP_ID=                  # Optional Discord application ID

# ----------------
# Data Providers (At least one recommended)
# ----------------

# Equity Data Providers
TIINGO_API_KEY=                  # Tiingo API key (recommended for equities)
POLYGON_API_KEY=                 # Polygon.io API key
ALPHA_VANTAGE_API_KEY=           # Alpha Vantage API key

# Crypto Data Providers
COINGECKO_API_KEY=               # CoinGecko API key (optional, free tier available)
CRYPTOCOMPARE_API_KEY=           # CryptoCompare API key

# Macro Data Providers
FRED_API_KEY=                    # FRED (Federal Reserve Economic Data) API key
QUANDL_API_KEY=                  # Quandl API key

# ----------------
# Broker (Optional for paper trading)
# ----------------
ALPACA_API_KEY=                  # Alpaca API key (paper trading)
ALPACA_API_SECRET=               # Alpaca API secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Alpaca base URL (paper)

# ----------------
# Database (Optional, defaults to SQLite)
# ----------------
DATABASE_URL=                    # PostgreSQL connection URL (optional)
                                # Example: postgresql://user:pass@host:5432/dbname
                                # Leave empty to use SQLite (data/runtime/quant.db)

# ----------------
# Optional Integrations
# ----------------
OPENAI_API_KEY=                  # OpenAI API key for AI-generated narration (optional)
WANDB_API_KEY=                   # Weights & Biases API key for experiment tracking (optional)

# ----------------
# Security & Secrets (Advanced)
# ----------------
# Add any additional secrets below
# Ensure they are never logged or printed
